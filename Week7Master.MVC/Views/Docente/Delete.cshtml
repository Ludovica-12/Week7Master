@model DocenteViewModel

<p>Sicuro di voler eliminare il docente @Model.Nome - @Model.Cognome - @Model.Email?</p>

<form method="post">

    <div class="form-group">
        <label asp-for="ID"></label>
        <input asp-for="ID" class="form-control" readonly />
        <span asp-validation-for="ID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" readonly/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cognome"></label>
        <input asp-for="Cognome" class="form-control" readonly/>
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" readonly/>
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <input type="submit" value="Eliminazione" class="btn btn-danger" />
    <a class="btn btn-primary" asp-action="Index" role="button">Annulla</a>
</form>